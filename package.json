{
  "name": "weather-frontend",
  "version": "1.0.0",
  "description": "This is a sample weather front-end API",
  "keywords": [
    "weather",
    "openapi",
    "open-meteo",
    "express",
    "typescript"
  ],
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch --inspect=0.0.0.0:9230 src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "postbuild": "copyfiles -f src/openapi.yaml dist",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-openapi": "^12.1.3",
    "express-openapi-validator": "^5.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "prettier": "^3.7.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "overrides": {
    "fs-routes": {
      "glob": "7.2.3"
    }
  }
}
